---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout
  title="Projects | Hana Code Corp"
  description="Projects built by Hana Code Corp."
>
  <Header />
  <main>
    <section class="section hero">
      <h1>Projects</h1>
    </section>
    <section class="section">
      <div class="card project-card">
        <h2>Slackwater</h2>
        <p class="tagline">Retirement planning for Canadians.</p>
        <p>
          Slackwater helps Canadians find financial clarity by modeling
          retirement timelines and optimizing withdrawal strategies across
          RRSP, TFSA, and non-registered accounts. See when you can retire
          and how to make your money last.
        </p>
        <div class="features">
          <div class="feature">
            <h3>Withdrawal Optimization</h3>
            <p>
              Smart strategies across registered and non-registered accounts
              to minimize taxes and maximize income.
            </p>
          </div>
          <div class="feature">
            <h3>Retirement Timeline</h3>
            <p>
              See when you can retire based on your actual financial picture,
              not generic rules of thumb.
            </p>
          </div>
          <div class="feature">
            <h3>Canadian-Focused</h3>
            <p>
              Built specifically for Canadian tax rules, CPP, OAS, and
              registered account types.
            </p>
          </div>
        </div>
        <a
          href="https://www.slackwater.ca"
          class="btn"
          target="_blank"
          rel="noopener"
        >
          Visit Slackwater
        </a>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>

<style>
  .hero {
    padding-top: 6rem;
    padding-bottom: 4rem;
  }

  h1 {
    font-size: 4rem;
    text-transform: uppercase;
    line-height: 1;
  }

  h2 {
    font-size: 2rem;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
  }

  .tagline {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: var(--color-accent);
  }

  .project-card p {
    font-size: 1.05rem;
    margin-bottom: 1rem;
  }

  .features {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    margin: 2rem 0;
  }

  .feature {
    border-left: 4px solid var(--color-border);
    padding-left: 1rem;
  }

  .feature h3 {
    font-size: 1.1rem;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
  }

  .feature p {
    font-size: 0.95rem;
    margin-bottom: 0;
  }

  @media (max-width: 768px) {
    .hero {
      padding-top: 4rem;
      padding-bottom: 2rem;
    }

    h1 {
      font-size: 2.5rem;
    }
  }
</style>
